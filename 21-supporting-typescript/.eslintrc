{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "eslint-plugin-html",
    "jquery"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:jquery/deprecated",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": ["error", { "allow": ["error"] }],
    "object-shorthand": "error",
    "prefer-destructuring": "warn",
    "prefer-rest-params": "warn",
    "prefer-spread": "warn",
    "prefer-template": "error",
    "no-var": "error",
    "prefer-const": "error",
  }
}